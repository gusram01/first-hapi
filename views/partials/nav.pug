nav.navbar.navbar-expand-sm.navbar-dark.bg-dark.row.align-items-center
  .container
    .col.m-2
      h1: a(href="/")
        img(src="/assets/images/logo.png" style="max-height: 60px;")
    .col.m-2.text-right
      if user
        .row.justify-content-end
          h4: span.badge.badge-info It's good to see you #{user.name}
        .row.justify-content-end
          +navLink('/ask', 'Ask')(class='btn-outline-primary')
          +navLink('/logout', 'Logout')(class='btn-outline-light')
      else 
        +navLink('/login', 'Login')(class='btn-outline-primary')
        +navLink('/signup', 'Signup')(class='btn-outline-light')